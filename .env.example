# Environment Variables
NODE_ENV=development
LOG_LEVEL=info

# Image Processing Settings
MAX_WIDTH=500
MAX_HEIGHT=500
MAX_FILE_SIZE=51200
JPEG_QUALITY_MIN=50
JPEG_QUALITY_MAX=80

# Scraping Settings  
SCRAPER_HEADLESS=true
SCRAPER_DELAY=1000
SCRAPER_TIMEOUT=30000
MAX_IMAGES_PER_KEYWORD=150

# Database Settings
DATABASE_PATH=./database/images.db

# File Paths
RAW_IMAGES_DIR=./images/raw
PROCESSED_IMAGES_DIR=./images/processed
LOGS_DIR=./logs

# Target Collection Settings
MIN_TARGET_IMAGES=3000
MAX_TARGET_IMAGES=5000

# Browser Settings
USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/119.0.0.0 Safari/537.36"